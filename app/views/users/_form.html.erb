<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
       <p><%= @user.errors.count %>件のエラーがあります。</p>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  名前
  <%= f.text_field :name, class: "form-control name-field" %>

  メールアドレス
  <%= f.text_field :email, class: "form-control email-field" %>
  
  好きな作曲家
  <%= f.text_field :fav_cmp1, class: "form-control favcmp-field" %>
  <%= f.text_field :fav_cmp2, class: "form-control favcmp-field" %>
  <%= f.text_field :fav_cmp3, class: "form-control favcmp-field" %>
  
  <%= f.text_field :cmt, class: "form-control cmt-field" %>  
  
  プロフィール画像
  <%= f.file_field :image, class: "form-control image-field" %>

  <%= f.submit '保存', class: "btn primary-btn" %>
<% end %>